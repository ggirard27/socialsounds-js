/*****************************/
/*          Globals          */
/*****************************/
body
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

/************************/
/*         Body         */
/************************/
#wrapper
    width: 100%
    height: 100%
    padding-left: 0
    -webkit-transition: all 0.5s ease
    -moz-transition: all 0.5s ease
    -o-transition: all 0.5s ease
    transition: all 0.5s ease
    
/****************************/
/*       Page Content       */
/****************************/
#page-content-wrapper 
    height: 100%
    margin-left: 200px

/***************************/
/*         Sidebar         */
/***************************/
#sidebar-wrapper
    width: 200px
    height: 100%
    position: fixed
    left: 0px
    top: 0px
    overflow-y: auto
    background: #000
    -webkit-transition: all 0.5s ease
    -moz-transition: all 0.5s ease
    -o-transition: all 0.5s ease
    transition: all 0.5s ease

.sidebar-nav 
    width: 150px
    /*margin-top: 50px*/
    position: absolute
    left: 0
    padding: 0
    list-style: none

.sidebar-nav li 
    text-indent: 20px
    line-height: 40px
.sidebar-nav li a 
    display: block
    text-decoration: none
    color: #999999
.sidebar-nav li a:hover 
    text-decoration: none
    color: #fff
    background: rgba(255,255,255,0.2)
.sidebar-nav li a:active,
.sidebar-nav li a:focus 
    text-decoration: none
    color: #fff
    background: rgba(255,255,255,0.2)
.sidebar-nav > .sidebar-brand 
    height: 65px
    font-size: 18px
    line-height: 60px
.sidebar-nav > .sidebar-brand a 
    color: #999999
.sidebar-nav > .sidebar-brand a:hover 
    color: #fff
    background: none
  
