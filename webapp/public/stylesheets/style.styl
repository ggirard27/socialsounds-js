body
    font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

/**************************/
/*         Navbar         */
/**************************/
@css {
    /* make sidebar nav vertical */ 
    @media (min-width: 992px) {
      .sidebar-nav .navbar .navbar-collapse {
        padding: 0;
        max-height: none;
      }
      .sidebar-nav .navbar ul {
        float: none;
      }
      .sidebar-nav .navbar ul:not {
        display: block;
      }
      .sidebar-nav .navbar li {
        float: none;
        display: block;
      }
      .sidebar-nav .navbar li a {
        padding-top: 12px;
        padding-bottom: 12px;
      }
      #navigation-section {
        padding: 0px;
        width: 70px;
        background-color: #264c6f;
        top: 0;
        left: 0;
        bottom: 0;
        position: fixed;
      }
      #content-section {
        margin-left: 70px;
      }
    }

    #navigation-section {
        padding: 0px;
    }
    
    #chatbox-section {
        background: #000;
        padding: 3px;
        position: fixed;
        bottom: 0;
        width: 100%;
        border-color: #0079c1;
        border-radius: 2; 
    }

    /*
    http://work.smarchal.com/twbscolor/css/e74c3cc0392becf0f1ffbbbc0
    */
    #navbar-socialsounds.navbar-default {
      background-color: #264c6f;
      border-color: #0079c1;
      border-radius: 0;
    }
    #navbar-socialsounds.navbar-default .navbar-brand {
      color: #ffffff;
    }
    #navbar-socialsounds.navbar-default .navbar-brand:hover,
    #navbar-socialsounds.navbar-default .navbar-brand:focus {
      color: #264c6f;
    }
    #navbar-socialsounds.navbar-default .navbar-text {
      color: #ffffff;
    }
    #navbar-socialsounds.navbar-default .navbar-nav > li > a {
      color: #ffffff;
    }
    #navbar-socialsounds.navbar-default .navbar-nav > li > a:hover,
    #navbar-socialsounds.navbar-default .navbar-nav > li > a:focus {
      color: #264c6f;
    }
    #navbar-socialsounds.navbar-default .navbar-nav > .active > a,
    #navbar-socialsounds.navbar-default .navbar-nav > .active > a:hover,
    #navbar-socialsounds.navbar-default .navbar-nav > .active > a:focus {
      color: #264c6f;
      background-color: #0079c1;
    }
    #navbar-socialsounds.navbar-default .navbar-nav > .open > a,
    #navbar-socialsounds.navbar-default .navbar-nav > .open > a:hover,
    #navbar-socialsounds.navbar-default .navbar-nav > .open > a:focus {
      color: #264c6f;
      background-color: #0079c1;
    }
    #navbar-socialsounds.navbar-default .navbar-toggle {
      border-color: #0079c1;
    }
    #navbar-socialsounds.navbar-default .navbar-toggle:hover,
    #navbar-socialsounds.navbar-default .navbar-toggle:focus {
      background-color: #0079c1;
    }
    #navbar-socialsounds.navbar-default .navbar-toggle .icon-bar {
      background-color: #ffffff;
    }
    #navbar-socialsounds.navbar-default .navbar-collapse,
    #navbar-socialsounds.navbar-default .navbar-form {
      border-color: #ffffff;
    }
    #navbar-socialsounds.navbar-default .navbar-link {
      color: #ffffff;
    }
    #navbar-socialsounds.navbar-default .navbar-link:hover {
      color: #264c6f;
    }

    @media (max-width: 992px) {
      #navbar-socialsounds.navbar-default .navbar-nav .open .dropdown-menu > li > a {
        color: #ffffff;
      }
      #navbar-socialsounds.navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
      #navbar-socialsounds.navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
        color: #264c6f;
      }
      #navbar-socialsounds.navbar-default .navbar-nav .open .dropdown-menu > .active > a,
      #navbar-socialsounds.navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
      #navbar-socialsounds.navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
        color: #264c6f;
        background-color: #0079c1;
      }
    }
}
