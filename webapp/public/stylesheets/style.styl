@css {
    /*
    http://work.smarchal.com/twbscolor/css/e74c3cc0392becf0f1ffbbbc0
    */
    #navbarSocialsounds.navbar-default {
      background-color: #002d56;
      border-color: #0079c1;
      border-radius: 0;
      border: 0;
    }
    #navbarSocialsounds.navbar-default .navbar-brand {
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-brand:hover,
    #navbarSocialsounds.navbar-default .navbar-brand:focus {
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-text {
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-nav > li > a {
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-nav > li > a:hover,
    #navbarSocialsounds.navbar-default .navbar-nav > li > a:focus {
      background-color: #264c6f;
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-nav > .active > a,
    #navbarSocialsounds.navbar-default .navbar-nav > .active > a:hover,
    #navbarSocialsounds.navbar-default .navbar-nav > .active > a:focus {
      background-color: #0079c1;
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-nav > .open > a,
    #navbarSocialsounds.navbar-default .navbar-nav > .open > a:hover,
    #navbarSocialsounds.navbar-default .navbar-nav > .open > a:focus {
      background-color: #0079c1;
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-toggle {
      border-color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-toggle:hover,
    #navbarSocialsounds.navbar-default .navbar-toggle:focus {
      background-color: #264c6f;
    }
    #navbarSocialsounds.navbar-default .navbar-toggle .icon-bar {
      background-color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-collapse,
    #navbarSocialsounds.navbar-default .navbar-form {
      border-color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-link {
      color: #ffffff;
    }
    #navbarSocialsounds.navbar-default .navbar-link:hover {
      color: #002d56;
    }

    @media (max-width: 992px) {
      #navbarSocialsounds.navbar-default .navbar-nav .open .dropdown-menu > li > a {
        color: #ffffff;
      }
      #navbarSocialsounds.navbar-default .navbar-nav .open .dropdown-menu > li > a:hover,
      #navbarSocialsounds.navbar-default .navbar-nav .open .dropdown-menu > li > a:focus {
        color: #002d56;
      }
      #navbarSocialsounds.navbar-default .navbar-nav .open .dropdown-menu > .active > a,
      #navbarSocialsounds.navbar-default .navbar-nav .open .dropdown-menu > .active > a:hover,
      #navbarSocialsounds.navbar-default .navbar-nav .open .dropdown-menu > .active > a:focus {
        color: #002d56;
        background-color: #0079c1;
      }
    }
}
