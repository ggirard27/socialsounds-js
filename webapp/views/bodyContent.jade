extends layout

block wrapperContent
    #navigation-section
        .sidebar-nav
            .navbar.navbar-default.navbar-fixed-top#navbarSocialsounds(role="navigation")
                .navbar-header
                    button.navbar-toggle(type="button" data-toggle="collapse" data-target=".sidebar-navbar-collapse")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.visible-xs.navbar-brand socialsounds
                .navbar-collapse.collapse.sidebar-navbar-collapse
                    ul.nav.navbar-nav
                        block navbarcontent
                            li#playerLink
                                a(href='/player/channels/default-room') Player
                            li#remoteLink
                                a(href='/remote/channels/default-room') Remote
                            li.dropdown
                                a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Channels 
                                    span.caret
