extends bodycontent

block content
    .container-fluid
        .row
            .hidden-xs.hidden-sm.col-md-3.col-lg-3
                #contentQueueDiv
                    span Channel Title
                    ul#contentQueueList
                    .progress
                        .progess-bar
                            span 3/15 voted person voted to skip
                    div
                    button.btn#btnSkip Skip
            .col-xs-12.col-sm-12.col-md-9.col-lg-9
                .row
                    .input-group
                        .input-group-btn
                        button.btn#addContentButton
                            i.fa.fa-plus
                        input.form-control#searchBarInput(type='text', placeholder='Search or enter url')
                        .input-group-btn
                            button.btn#searchButton
                                i.fa.fa-search
                            button.btn#startBroadcastButton Start Broadcast
                    div
                        dropdown#searchResults
                            select.search-results-dropdown#searchResultsDropdown
                .row
                    .container-fluid.player-fluid-container-style
                        .container.player-container-style
                            .embed-responsive.embed-responsive-16by9
                                iframe.embed-responsive-item#soundcloudPlayer
                                .iframe.embed-responsive-item#vimeoPlayer
                                .iframe.embed-responsive-item#youtubePlayer
                .row
                    .col-xs-4.col-sm-4.col-md-6.col-lg-6
                        .pull-left
                            #fb-root
                                a.fb-share-button#fbShareButton(data-href='http://socialsounds.azurewebsites.net', data-layout='button')
                            #gpShareButton
                                a.g-plus(data-action='share', data-annotation='none', data-height='24', data-href='http://socialsounds.azurewebsites.net')
                            #twitterShareButton
                                a.twitter-share-button(href='https://twitter.com/intent/tweet', data-text=' ', data-url='http://socialsounds.azurewebsites.net', data-hashtags='socialsounds') Tweet
                    .col-xs-4.col-sm-4.hidden-md.hidden-lg
                        .text-center
                            button.btn#smallDisplayChatBtn Chat
                            button.btn#smallDisplayPlaylistBtn Playlist
                    .col-xs-4.col-sm-4.col-md-6.col-lg-6
                        .pull-right
                            button.btn#btnOpenInBrowser Open in new window
                            button.btn#btnMuteContent Mute
          .ul.pages
            .li#chatPage
              .div#chatArea
                .ul#chatBox
              input#inputChat(PlaceHolder="Type here...")
            .li.loginPage#loginPage
              .form
                .h3.title What's your nickname? 
                    input.usernameInput#usernameInput(type="text" maxlength="14")
        .row#smallPlaylistSection
            .col-xs-12.col-sm-12.hidden-md.hidden-lg
                #smallContentQueueDiv
                    span Channel Title
                    ul#smallContentQueueList
                    .progress
                        .progess-bar
                            span 3/15 voted person voted to skip
                    div
                    button.btn#btnSkip Skip
append bodyscripts
    script(src='https://cdn.socket.io/socket.io-1.4.5.js')
    script(src='/javascripts/socketio-client.js')
    script(src='/javascripts/player.js')
    script(src='/javascripts/youtube-player.js')
    script(src='http://connect.soundcloud.com/sdk/sdk-3.0.0.js')
    script(src='https://w.soundcloud.com/player/api.js')
    script(src='/javascripts/soundcloud-player.js')
    script(src='/javascripts/facebook-social-plugin.js')
    script(src='https://apis.google.com/js/client.js?onload=googleApiClientReady')
    script(src='https://apis.google.com/js/platform.js' async defer)
    script(src='/javascripts/twitter-social-plugin.js')